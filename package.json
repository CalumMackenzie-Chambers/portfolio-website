{
  "type": "module",
  "scripts": {
    "build:js": "esbuild src/js/index.js --bundle --outfile=dist/static/js/bundle.js --minify",
    "build:css": "tailwindcss -i src/css/input.css -o dist/static/css/output.css --minify",
    "build:copy": "cp src/index.html dist/index.html",
    "build": "npm run build:js && npm run build:css && npm run copy",
    "watch:js": "esbuild src/js/index.js --bundle --outfile=dist/static/js/bundle.js --watch",
    "watch:css": "tailwindcss -i src/css/input.css -o dist/static/css/output.css --watch",
    "watch:copy": "node ./scripts/copy.js",
    "live-server": "node ./scripts/live-server.js",
    "dev": "concurrently \"npm run watch:*\" \"npm run live-server\""
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "esbuild": "0.19.9",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "tailwindcss": "3.3.6",
    "ws": "^8.15.1"
  }
}
